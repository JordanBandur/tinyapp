<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <!-- Login and Logout Forms -->
    <% if (user && user.email) { %> <!-- Checking if user object exists and has an email -->
      <div class="navbar-nav ml-auto">
        <div class="nav-item navbar-text mr-3">
          Signed in as: <%= user.email %>
        </div>
        <form method="POST" action="/logout" class="form-inline my-2 my-lg-0">
          <button type="submit" class="btn btn-danger my-2 my-sm-0">Logout</button>
        </form>
      </div>
      <% } else { %> <!-- Display login form if no user is logged in -->
        <div class="navbar-nav ml-auto">
          <form method="POST" action="/login" class="form-inline my-2 my-lg-0">
            <input type="text" class="form-control mr-sm-2" id="username" name="username" placeholder="Username">
            <button type="submit" class="btn btn-primary my-2 my-sm-0">Login</button>
          </form>
        </div>
        <% } %>
  </nav>
</header>